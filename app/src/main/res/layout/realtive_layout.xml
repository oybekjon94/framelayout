<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_marginTop="50dp"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/usernametextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"
        android:layout_marginStart="16dp"
        android:layout_marginTop="60dp"
        android:text="bu android rasm" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/usernametextview"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@id/usernametextview"
        android:hint="enter your name" />

    <TextView
        android:id="@+id/passwordTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/usernametextview"
        android:layout_marginStart="60dp"
        android:layout_marginTop="24dp"
        android:text="password: " />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/passwordTV"
        android:layout_marginStart="24dp"
        android:hint="hint enter password"
        android:layout_toEndOf="@id/passwordTV" />
    <Button
        android:layout_width="wrap_content"
        android:text="Sign in"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/passwordTV"
        android:layout_marginTop="24dp"
        android:layout_height="wrap_content"/>
</RelativeLayout>